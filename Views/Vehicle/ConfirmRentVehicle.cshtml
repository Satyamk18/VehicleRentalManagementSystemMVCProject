@model VehicleRentalManagementProject.Models.Vehicle

@{
    ViewData["Title"] = "ConfirmRentVehicle";
}

<h1 style="text-align:center">Confirm Your Rental </h1>
<hr />
<div class="row">
    <div class="mx-auto col-10 col-md-8 col-lg-6">
        <form asp-action="RentVehicle" asp-route-id="@ViewBag.thisvehicle.VehicleId">
            <p style="text-align:center">Are your sure you want to rent <b>@ViewBag.thisvehicle.ModelName</b> Vehicle</p>
            <br>
            <div class="form-group">
                <div class="text-center">
              
                <input type="submit" value="Confirm this Rental!" class="btn btn-success"/><br>
                <br>
                <button type="button" class="btn btn-danger"><a asp-action="ShowVehicles" style="color:white">Cancel</a></button>
              </div>
            </div>
        </form>
    </div>
</div>
